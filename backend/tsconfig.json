{
  "compilerOptions": {
    "lib": [
      "es2018"
    ],
    "module": "commonjs",
    "target": "es2018",
    "outDir": "dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "moduleResolution": "node"
  },
  "include": [
    "src"
  ]
}